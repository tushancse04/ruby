<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
			<div class="panel panel-info">
				<div class="panel-heading">
					<h3 class="panel-title">Travel Destination Detail</h3></br>
				</div>
				<div class="panel-body">
					<p id="notice"><%= notice %></p>

					<p>
						<strong>Address:</strong>
						<%= @travel_destination.address %>
					</p>

					<p>
						<strong>City:</strong>
						<%= @travel_destination.city %>
					</p>

					<p>
						<strong>State:</strong>
						<%= @travel_destination.state %>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>











<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
			<div class="panel panel-info">
				<div class="panel-heading">
					<h3 class="panel-title">Pictures</h3></br>
				</div>
				<div class="panel-body">
					<% @pictures.each do|pic| %>
					<%= image_tag(pic.image_url.to_s,size: "100x100") %>
					<% end %>
				</div>
			</div>
		</div>

	</div>
</div>

<div class="panel-body">
			<%= link_to 'Edit', edit_travel_destination_path(@travel_destination) , class: "btn btn-sm btn-primary" %>
	<%= link_to 'Back', travel_destinations_path , class: "btn btn-sm btn-primary" %>
</div>

