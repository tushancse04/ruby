<div class="container">
  <h2>Travel Destinations</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>

    <% @travel_destinations.each do |travel_destination| %>
      <tr>
        <td><%= travel_destination.address %></td>
        <td><%= travel_destination.city %></td>
        <td><%= travel_destination.state %></td>
        <td><%= link_to 'Show', travel_destination %></td>
        <td><%= link_to 'Edit', edit_travel_destination_path(travel_destination) %></td>
        <td><%= link_to 'Destroy', travel_destination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New Travel Destination', new_travel_destination_path, class: "btn btn-sm btn-primary" %>