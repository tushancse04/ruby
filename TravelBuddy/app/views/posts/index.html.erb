<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.image %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<b>Users</b>

<ul id="posts">
  <%= render @posts %>
</ul>

<br>

<%= form_for(@post, remote: true) do |f| %>
    <%= f.hidden_field :user_id  %>
    <%= f.hidden_field :travel_event_id  %>
    <%= f.label :content %><br>
    <%= f.text_field :content %>
    <%= f.submit %>
<% end %>

<%= link_to 'New Post', new_post_path(2) %>
